{
    "scopeName": "comment-keywords.injection",
    "injectionSelector": ["L:comment"],
    "patterns": [
      {
        "include": "#todo-keyword"
      },
      {
        "include": "#note-keyword"
      },
      {
        "include": "#tbd-keyword"
      }
    ],
    "repository": {
      "todo-keyword": {
        "match": "(TODO|Todo)(\\(([^)]+)\\))?(:)?",
        "name": "comment-keywords.todo"
      },
      "note-keyword": {
        "match": "(NOTE|Note)(\\(([^)]+)\\))?(:)?",
        "name": "comment-keywords.note"
      },
      "tbd-keyword": {
        "match": "TBD(:)?",
        "name": "comment-keywords.tbd"
      }
    }
  }
  